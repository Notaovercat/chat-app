{
  "name": "chat-app",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/Notaovercat/chat-app.git",
  "author": "Notaovercat <fdgoe@list.ru>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:all": "concurrently \"yarn dev:back\" \"yarn dev:front\"",
    "dev:back": "yarn workspace backend dev",
    "dev:front": "yarn workspace frontend dev",
    "build:all": "run-p build:back build:front",
    "build:back": "yarn workspace backend build",
    "build:front": "yarn workspace frontend build",
    "start:back": "yarn workspace backend serve -s dist",
    "start:front": "serve -s packages/frontend/dist",
    "prisma:studio": "yarn workspace backend prisma studio",
    "prisma:migrate": "yarn workspace backend prisma migrate dev"
  },
  "devDependencies": {
    "serve": "^14.2.0"
  }
}
